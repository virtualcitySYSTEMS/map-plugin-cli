{
  "name": "@vcmap/plugin-cli",
  "version": "2.1.11",
  "description": "A CLI to help develop and build plugins for the VC Map",
  "main": "index.js",
  "type": "module",
  "bin": {
    "vcmplugin": "cli.js"
  },
  "scripts": {
    "lint:js": "eslint . --ext .vue,.js,.cjs,.mjs,.ts,.cts,.mts",
    "lint:prettier": "prettier --check .",
    "lint": "npm run lint:js && npm run lint:prettier",
    "format": "prettier --write --list-different . && npm run lint:js -- --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/virtualcitySYSTEMS/map-plugin-cli.git"
  },
  "author": "Ben Kuster <bkuster@virtualcitysystems.de>",
  "license": "MIT",
  "files": [
    "assets/",
    "src/",
    "cli.js",
    "README.md",
    "index.js",
    "LICENSE.md"
  ],
  "dependencies": {
    "@vcmap/rollup-plugin-vcs-ol": "^1.0.2",
    "@vcsuite/cli-logger": "^1.0.0",
    "commander": "^10.0.1",
    "express": "^4.18.2",
    "prompts": "^2.4.2",
    "sass": "1.32.13",
    "semver": "^7.5.1",
    "tar": "^6.1.15",
    "vite": "^4.3.9",
    "@vitejs/plugin-vue2": "^2.2.0",
    "vue-template-compiler": "~2.7.14"
  },
  "peerDependencies": {
    "@vcmap/ui": "^5.0.0-rc.29",
    "vue": "~2.7.14"
  },
  "peerDependenciesMeta": {
    "@vcmap/ui": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vcsuite/eslint-config": "^3.0.3",
    "eslint": "^8.38.0"
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "eslintConfig": {
    "extends": "@vcsuite/eslint-config/node",
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "^@vcmap/ui"
          ]
        }
      ]
    }
  },
  "prettier": "@vcsuite/eslint-config/prettier.js",
  "engines": {
    "node": "^16.14.0",
    "npm": "^8.3.0"
  }
}
