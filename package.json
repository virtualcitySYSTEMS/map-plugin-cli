{
  "name": "@vcmap/plugin-cli",
  "version": "4.0.2",
  "description": "A CLI to help develop and build plugins for the VC Map",
  "main": "index.js",
  "type": "module",
  "bin": {
    "vcmplugin": "cli.js"
  },
  "scripts": {
    "lint:js": "eslint . --ext .vue,.js,.cjs,.mjs,.ts,.cts,.mts",
    "lint:prettier": "prettier --check .",
    "lint": "npm run lint:js && npm run lint:prettier",
    "format": "prettier --write --list-different . && npm run lint:js -- --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/virtualcitySYSTEMS/map-plugin-cli.git"
  },
  "author": "Ben Kuster <bkuster@virtualcitysystems.de>",
  "license": "MIT",
  "files": [
    "assets/",
    "src/",
    "cli.js",
    "README.md",
    "index.js",
    "LICENSE.md"
  ],
  "dependencies": {
    "@vcmap/rollup-plugin-vcs-ol": "^1.0.2",
    "@vcsuite/cli-logger": "^1.0.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "commander": "^10.0.1",
    "express": "^4.21.1",
    "prompts": "^2.4.2",
    "sass": "^1.80.2",
    "semver": "^7.5.4",
    "tar": "^7.4.3",
    "vite": "^5.4.9",
    "vite-plugin-vuetify": "^2.0.4"
  },
  "peerDependencies": {
    "@vcmap/ui": "^6.0",
    "vue": "~3.4.38"
  },
  "peerDependenciesMeta": {
    "@vcmap/ui": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vcsuite/eslint-config": "^3.0.7",
    "eslint": "^8.38.0"
  },
  "eslintIgnore": [
    "node_modules",
    "assets/tests",
    "assets/testsTypescript",
    "assets/index.ts"
  ],
  "eslintConfig": {
    "extends": "@vcsuite/eslint-config/node",
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "^@vcmap/ui"
          ]
        }
      ]
    }
  },
  "prettier": "@vcsuite/eslint-config/prettier.js",
  "engines": {
    "node": ">=18.12.0 || >= 20.0.0",
    "npm": ">=9.0.0 || 10.0.0"
  }
}
